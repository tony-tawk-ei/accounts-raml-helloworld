	<munit:config name="account-api-suite.xml" />
	<munit:test name="get:\accounts:account-api-config-test" doc:id="4a4f9095-8f91-4b82-b1b2-e74fb90125a2" >
		<munit:behavior >
			<munit:set-event doc:name="Set Input" doc:id="d88dc0ae-222d-4d85-a64f-a7af5323ab3a" >
				<munit:payload value="#[readUrl('classpath://getaccountsaccountapiconfigtest\set-event_payload.dwl')]" encoding="UTF-8" />
				<munit:attributes value="#[readUrl('classpath://getaccountsaccountapiconfigtest\set-event_attributes.dwl')]" />
				<munit:variables >
					<munit:variable key="outboundHeaders" value="#[readUrl('classpath://getaccountsaccountapiconfigtest\set-event_variable_.dwl')]" />
				</munit:variables>
			</munit:set-event>
		</munit:behavior>
		<munit:execution >
			<flow-ref doc:name="Flow-ref to get:\accounts:account-api-config" doc:id="60aae98a-9118-4bfb-b0e1-43c39462c708" name="get:\accounts:account-api-config"/>
		</munit:execution>
		<munit:validation >
